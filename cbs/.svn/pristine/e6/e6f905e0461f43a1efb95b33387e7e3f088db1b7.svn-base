/* 请输入拒绝理由窗口样式 */
.mo_del {
	width: 100%;
	height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
    display: none;
}
.model_content{
	width:414px;
	height:220px;
	background: #fff;
	position: fixed;
	top:50%;
	left:50%;
	margin:-110px 0 0 -212px;
	box-shadow: 0 1px 8px #ccc;
}
.model_content textarea{
	display: block;
	width:372px;
	height:76px;
	border:1px solid #dedede;
	border-radius: 4px;
	margin:52px auto 0;
	text-indent: 6px;
	padding-top:4px;
	color:#525252;
	resize: none;
	outline:none;
}
.model_content a{
	height:28px;
	line-height: 28px;
	background: #de642c;
	border: 1px solid #bc5120;
	padding:0 30px;
	border-radius: 2px;
	color:#fff;
	position:absolute;
	right:20px;
	bottom:32px;
}
.model_content span{
	background:url("/img/adv_sea_close.png") no-repeat center;
    cursor: pointer;
    width: 20px;
    height: 20px;
    position: absolute;
    right: 5px;
    top: 5px;
}

