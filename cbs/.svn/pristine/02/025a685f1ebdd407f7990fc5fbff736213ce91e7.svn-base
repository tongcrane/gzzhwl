
.con_tent{border:none;width:1150px;}
.feedline{overflow:hidden;} /* 清浮动 */
.check{border:none;width:1150px;}
.layout{margin-right:50px;}
.right_no{margin-right:0;}
.layout .spa_n{padding-left:4px;width:230px;}
.layout .labe_l{display: inline-block;}
.mess_age .layout .inpu_t{margin-left:-4px;}
.layout .inpu_t{height:24px;}
.rela_tive{position:relative;}
.check .active{ background-color: #de642c;color:#fff;border: 1px solid #bc5120; border-radius: 2px;}
.check a{width:90px;}
.pull_out{position: absolute;bottom:60px;left:0;text-align: center;padding:0 24px;height: 28px;line-height: 28px;border: 1px solid #dcdcdc;border-radius: 2px;font-size: 14px;color: #4c4c4c;background: #eee;outline: none;}

/* 异常反馈样式 */
.feedback{margin-bottom: 15px;} 
.feedback h3 {width: 1123px;height: 48px;line-height: 48px;padding-left: 25px;margin-bottom: 24px;border-bottom: 1px solid #e1e1e1;background: url(../img/detail_info.png) no-repeat 0 center;font-size: 16px;color: #525252;}
.feedline .layout .labe_l{display: inline-block;width: auto;margin-right:5px;}
.feedline .layout .inpu_t{width:192px;height:24px;}
.feedline .layout{margin-right:30px;}
.feedline .right_short{margin-right:20px;}
.feedline .right_none{margin-right:0;cursor: pointer;}
.feedline .right_short .inpu_t{width:414px;}
.right_none{width:23px;height:24px;background:#eee;border:1px solid #d7d7d7;position:relative;}
.right_none:before{content: '';position:absolute;top:12px;left:6px;width:12px;border-top:2px solid #7b7b7b;}

/* 按钮部分样式 */
.btn a {float: right;width: 82px;text-align: center;height: 28px;line-height: 28px;border: 1px solid #dcdcdc;margin: 12px 32px 0 0;border-radius: 2px;font-size: 14px;color: #4c4c4c;background: #eee;}
.btn .add{position: relative;}
.btn .add:before{content: '';position:absolute;top:14px;left:34px;width:12px;border-top:2px solid #7b7b7b;}
.btn .add:after{content: '';position:absolute;top:9px;left:39px;height:13px;border-left:2px solid #7b7b7b;}
.btn .submit{margin:12px 0 0 0;}

/* 图片部分 */
.images{margin-left:964px;width: 178px;height: 178px;position:relative;border: 1px solid #e5e5e5;cursor:pointer;border-radius: 4px;background: #fbfbfb;background-size: cover;background-position: center center;}
.images .file-add{width: 44px;height: 44px;cursor:pointer;position: absolute;top: 41px;left: 66px;z-index: 10;background: url(/img/car_add.png) no-repeat;} 
.images>span{display: block;text-align: center;font-size:14px;color:#919191;margin-top:118px;}   

/* 单位样式 */
.km,.weight,.volume,.money{position:relative;}
.km:after,.weight:after,.volume:after,.money:after{content:"元/kg";position:absolute;top:2px;left:305px;color:#ddd;font-weight: normal;}
.km:after{content:"km";left:320px;}
.weight:after{content:"kg";left:330px;}
.volume:after{content:"m³";left:330px;}
.money:after{content:"元";left:302px;top:1px;}

/* 有单位input加padding-right */
.layout .unit_short{width:206px;padding-right:28px;}

/* 模态窗口 */
.model_content,.car_content,.driver_content{width:690px;min-height:328px;margin:-203px 0 0 -365px;padding:20px;display: none;}
.car_content,.driver_content {background: #fff;position: fixed;top:50%;left:50%;box-shadow: 0 1px 8px #ccc;}
.model_content h4,.car_content h4,.driver_content h4{font-size:20px;padding-bottom:15px;border-bottom:1px solid #dcdcdc;margin-bottom: 32px;color:#525252;}
.model_content .layout .stage{width:94px;}
.model_content a,.driver_content a,.car_content a{display:inline-block;height:28px;line-height: 28px;margin-left: 596px;background: #de642c;border: 1px solid #bc5120;padding:0 30px;border-radius: 2px;color:#fff;/* position:absolute;right:20px;bottom:32px; */}
.model_content i,.driver_content i,.car_content i{background:url("/img/adv_sea_close.png") no-repeat center;cursor: pointer;width: 20px;height: 20px;position: absolute;right: 5px;top: 5px;}

.model_back .layout .stage{width:auto;padding-right:8px;}
.model_back .layout .spa_n{width:148px;}
.model_back .layout{margin-right:10px;margin-bottom:20px;}
.model_back .inpu_t{width:236px;margin-left:4px;}
.model_back .images{margin-left:0;}
.model_back .unit_short{width:210px;padding-right:26px;}

.model_back .labe_l.short,.feed_reason .labe_l{width:auto;padding-right:8px;}
.feed_reason>textarea{height:86px;width:607px;vertical-align: top;}
.driver_content .model_back .inpu_t,.car_content .model_back .inpu_t{width:246px;margin-left:4px;}


