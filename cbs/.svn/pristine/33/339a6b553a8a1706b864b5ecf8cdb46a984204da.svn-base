$(function() {
	
	var remark_win=function(sourceId,actionType,text) {//01关闭 02备注
		var el=$('<div class="mo_del">\
				<div class="model_content">\
				<textarea maxlength="400" name="" id="close_reason"></textarea>\
				<a href="javascript:void(0);">确定</a>\
				<span></span>\
			</div>\
		</div>');
		
		$('body').append(el);
		
		el.find('.model_content span').click(function(){
			el.remove();
		});
		
		el.find('textarea').attr('placeholder',text);
		
		el.find('.model_content a').click(function(){
			var reason=el.find('#close_reason').val();
			var result={};
			var url='';
			if(actionType=='01') {
				url="/admin/source/close";
				result.sourceId=sourceId;
				result.reason=reason;
			} else if(actionType=='02') {
				url="/admin/remark/addRemark";
				result.targetId=sourceId;
				result.content=reason;
				result.remarkType='02';
			}
			$.ajax({
		        url: global.server + url,
		        type: "POST",
		        data: result,
		        success: function (msg) {
		            if (msg && msg.status && msg.status.statusCode == global.status.success) {
		            	el.remove();
		            	//alert("操作成功。");
		            	table.load({
		            		queryType:0,
		            		sourceType:'02'
		            	});
		            } else {
		            	alert(msg.status.errorMsg);
		            }
		        }
		    });
			
		});
		
		el.show();
	}
	
