/* placeholder字体颜色大小 */
input::-webkit-input-placeholder {color:#adadad;font-size:12px;}
input:-moz-placeholder {color:#adadad;font-size:12px;}
input::-moz-placeholder {color:#adadad;font-size:12px;}
input:-ms-input-placeholder {color:#adadad;font-size:12px;}

/* 忘记密码样式 */
.step{margin:20px 0 0 483px;font-size: 14px;}
.step h3{font-size:20px;font-weight: normal;height:28px;color:#464646;margin-bottom: 12px;}
.step p{font-size: 12px;color:#777;margin-bottom: 16px;}
.step label{height:28px;line-height: 28px; color:#777;}
#job_num{width:220px;height:30px;line-height:30px;border:1px solid #dcdcdc;text-indent: 4px;color:#2f2f2f;display: block;}
.findOut{color:#777;margin-top:26px;}
.for_con a{display:inline-block;height:30px;line-height:30px;padding:0 16px;border:1px solid #b04d21;background: #dc622c;border-radius: 4px;margin-top:46px;color:#fff;letter-spacing: 2px;}
#model{width:100%;height:100%;position: fixed;top:0;left:0;background:rgba(0,0,0,0.5);z-index: 999;display: none;}
.model_con{width:584px;height: 360px;position: absolute;top:50%;left:50%;margin:-180px 0 0 -292px;background:#fff;border-radius: 6px;box-shadow: 0 0 4px #666;}
.model_con span{display:block;width:20px;height:20px;background:url(../img/model_close.png) no-repeat center center;position: absolute;top:10px;right:16px;cursor: pointer;}
.model_con img{width:100px;height:100px;display: block;margin:48px auto 15px;}
.model_con h4{font-size:36px;color:#484848;height:46px;line-height: 46px;margin-bottom: 20px;text-align: center}
.model_con p{font-size: 16px;color:#7d7d7d;text-align: center;padding-left:10px;}

/* 通过邮箱找回密码样式 */
.post_box{display: none;}
.post_box p{margin-bottom:0;}
.special{color:#df632c;}

/* 通过手机号找回密码样式 */
.phone{display: none;}
.code{width:220px;height:30px;line-height:30px;border:1px solid #dcdcdc;text-indent: 4px;color:#2f2f2f;display: block;margin-top:26px;}
.phone input{width:220px;height:30px;line-height:30px;border:1px solid #dcdcdc;text-indent: 4px;color:#2f2f2f;display: block;margin-top:0;}
.img_code{position:relative;}
.img_code img{width:74px;height:30px;position:absolute;top:29px;left:147px;}
.phone_code{position:relative;}
.phone_code b{font-weight: normal;color:#e1642c;height:30px;line-height:30px;position: absolute;top:29px;left:147px;cursor: pointer; }
.code_tip{display:block;margin-top:5px;color:#de2c2c;font-size:12px;display: none;}
.img_code,.phone_code{margin-bottom:15px;}
.phone a{margin-top:26px;}