

.con_tent{border:none;width:1150px;padding-bottom:10px;}
.layout{margin-right:46px;}
.right_no{margin-right:0;}
.check{border:none;width:1150px;}
.check .active,.over{ background-color: #de642c;color:#fff;border: 1px solid #bc5120;}
.spa_n.car_number{text-decoration: underline;color:#e1642d;cursor: pointer;}
.check a{width:auto;text-align: center;padding:0 10px;}
.spa_n>a{text-decoration:underline;color:#de642c;}
.over{display: inline-block;padding:0 20px;height:28px;line-height:28px;cursor:pointer;margin-bottom: 15px;margin-left:1006px;letter-spacing: 2px;}

/* 去掉详情页面行高 */
.layout .stage{line-height: normal;height:auto; /* background:orange; */}
.layout .spa_n{line-height: normal;height:auto;/* background:pink; */}
.layout{margin-bottom:15px;}

/* 费用信息样式 */
.fee_type{border-bottom: 1px solid #e1e1e1;position: relative;height:45px;}
.fee_type .stage{font-size:15px;}
.fee_type::before{content: ' ';display: block;width:0;height:0;border:10px solid transparent;border-bottom-color: #e1e1e1;position:absolute;bottom:0;left:487px;}
 .fee_type::after{content: ' ';display: block;width:0;height:0;border:14px solid transparent;border-bottom-color: #fff;position:absolute;bottom:-6px;left:483px;}
.fee_type .layout{margin-right:54px;}
.layout.right_no{margin-right:0;}

/* 车辆到达部分样式 */
.unusual h3{width: 1123px;height: 48px;line-height: 48px;padding-left: 25px;margin-bottom: 24px;border-bottom: 1px solid #e1e1e1;background: url(../img/detail_info.png) no-repeat 0 center;font-size: 16px;color: #525252;}
.unusual{width:1150px;margin:0 auto;}
.un_content{margin-bottom: 30px;}
.un_content h4{font-size:16px;color:#414141;margin-top:20px;}
.un_bg{background: #fff;font-size: 14px;color:#414141;padding:15px 0;}
.un_bg>p{padding:5px 0;}
.un_num{padding-right:4px;}
.un_bg>p>span{vertical-align: top;display: inline-block;}
.un_name,.un_arrive,.company,.arrive_time,.un_cost,.delay{padding-left:10px;}
.un_time{width:130px;}
.un_name{width:130px;}
.un_cost{width:80px;}
.company{width:190px;}
.delay{width:170px;}
.delay_reason{width:509px;padding:0 10px;}
.fee{width:60px;text-align:center;color:#de642c;cursor: pointer;}
.check a.padd_ing{padding:0 35px;}
.relati_ve{position:relative;}

/* 模态窗口 */
.model_content>h4{margin-top:5px;}
.model_content>h4>p{display: inline-block;}
.layout .labe_l{display: inline-block;width:84px;}

/* 增加客户异常弹出框 */
.add_un{width:630px;margin:-203px 0 0 -315px;}
.add_un>a{margin: 20px 0 20px 525px;}
.layout.inline{display: inline-block;margin-right:65px;font-size:14px;}
.layout.inline.mar-right{margin-right:0;}
.layout.inline>input[type='radio']{margin-left:24px;margin-right:6px;}
.layout.mar-right{margin-right:0;}
.add_un .layout>textarea{height:86px;width:534px;vertical-align: top;margin-left:0;}
.add_un .layout .pad_right{width:210px;padding-right:24px;}

/* 车辆到达时间弹框 */
.model_content.review{width:360px;margin:-180px 0 0 -180px;min-height:192px;}
.model_content.review > a{margin:30px 0 30px 269px;padding:0 12px;}
.model_content.review .layout{margin-right:0;font-size:14px;}

/* 费用调整 */
.model_content.adjust{width:400px;margin:-180px 0 0 -200px;min-height:192px;}
.model_content.adjust > a{margin:30px 0 30px 325px;padding:0 20px;}
.adjust .layout{font-size:14px;}
.adjust .layout>input[type='radio']{margin-right:6px;}
.adjust .layout>input[type='radio']:nth-of-type(2){margin-left:48px;}

/* 单位样式 */
.money:after{content:"元/kg";position:absolute;top:2px;left:305px;color:#ddd;font-weight: normal;}
.money:after{content:"元";left:304px;top:1px;}


.tips{margin-top:40px;}
.tips .text{color:red;}