	var contractId = global.QueryString.contractId;
	var param = {
			contractId : contractId
	};
	var load=new CBSDriverContractInfo(param);
    $(".check_hover").hover(function(){$(".hover_content").show()},function(){$(".hover_content").hide()})
	
