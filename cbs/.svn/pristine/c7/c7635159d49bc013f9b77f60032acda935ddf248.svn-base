/* 模态窗口 */

.model_content_cansel{
	background: #fff;
	position: fixed;
	top:50%;
	left:50%;
	box-shadow: 0 1px 8px #ccc;
	display: none;
}
.model_content_cansel a{
	height:28px;
	line-height: 28px;
	background: #de642c;
	border: 1px solid #bc5120;
	padding:0 30px;
	border-radius: 2px;
	color:#fff;
	position:absolute;
	right:20px;
	bottom:32px;
}
.model_content_cansel i{
	background:url("/img/adv_sea_close.png") no-repeat center;
    cursor: pointer;
    width: 20px;
    height: 20px;
    position: absolute;
    right: 5px;
    top: 5px;
}
.model_content_cansel{width:414px;height:200px;margin:-100px 0 0 -212px;}
a.mo_con_no{right:108px;}
a.mo_con_yes{right:214px;}
.model_content_cansel p{padding:40px;color:#525252;text-align: center;margin-top: 20px;}

/* 单位样式 */
.km,.weight,.volume{position:relative;}
.km:after,.weight:after,.volume:after{content:"元/kg";width:50px;position:absolute;top:0;left:305px;color:#ddd;font-weight: normal;}
.km:after{content:"km";left:320px;}
.weight:after{content:"kg";left:325px;}
.volume:after{content:"m³";left:324px;}

.rela_tive{position:relative;}
.unit{text-align:right;height:26px;line-height:26px;position:absolute;top:1px;right:127px;font-style: normal;font-size:14px;color:#ddd;}

