$(function(){
	var orderId = global.QueryString.orderId;
	var param = {};
	if(orderId){
		param.orderId = orderId;
	} 
	
	var addOrder = new CBSAddOrder(param);
	$('.conserve').click(function(){
		addOrder.doSave();
		
	});
	
	$('.cancel').click(function(){
		addOrder.showCancel();
	});
})