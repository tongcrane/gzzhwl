	});
	
	$('#btn_search').click(function(){
		var queryContent=$('.list-search').val();
		if(queryContent==null||queryContent=='') {
			table.load({
				queryType:0,
				sourceType:'01'
			});
		} else {
			table.load({
				queryType:0,
				sourceType:'01',
				queryContent:queryContent
			});
		}
	});
	
