.reg_hint{height:40px;}
.reg_tit{font-size:26px;color:#808080;margin-top:48px;margin-left:564px;}
.reg_con{width:1200px;background:url(/img/reg_bg.png) no-repeat left 40px;margin-bottom:42px;}
.reg_con .reg_r{float: right;width:446px;background-color:#f1f1f1;margin-top:30px;padding-bottom:42px;}
.reg_con .reg_r .reg_w{width:380px;margin:32px auto 0;}
.reg_con .reg_r .reg_w p{margin-top:17px;}
.reg_con .reg_r label{display:block;line-height:38px;font-size:18px;color:#222222;}
.reg_con .reg_r input{width:100%;height:40px;border:1px solid #d9d9d9;border-top:1px solid #c1c1c1;padding-left:10px;font-size:18px;color:#404040;-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;}
.reg_con .reg_r input.code{width:223px;float:left;}
.reg_con .reg_r input.getMobileCode{width:137px;float:right;font-size:14px;color:#65c686;padding-left:0px;text-align:center;cursor:pointer;border-radius:2px;}
.reg_con .reg_r input.agree{width:13px;height:13px;border:1px solid #d9d9d9;margin-right:10px;}
.reg_con .reg_r .role{width:100%;height:40px;border:1px solid #d9d9d9;border-top:1px solid #c1c1c1;outline:none;}
.reg_con .reg_r .role option{width:211px;height:36px;line-height:36px;font-size:16px;color:#383838;}
.reg_con .reg_r label span{color:#f52b00;}
.reg_con .reg_r input.nextStep{width:131px;height:38px;background-color:#f25a0b;border:1px solid #ce4701;border-radius:3px;font-size:18px;color:#fff;text-align:center;line-height:38px;float:right;cursor:pointer;padding-left:0px;}

/* 长跑线路 */
.rou_tit{margin-left:490px;}
.rou_con{width:1100px;height:670px;background:url(/img/route_bg.png) no-repeat left 40px;}
.rou_w{width:1100px;}
.rou_w h3.hint{padding-left:35px;background:url(/img/hint.png) no-repeat left center;width:58px;font-size:18px;color:#222222;height:34px;line-height:34px;margin:20px 0 10px 0;}
.reg_con .reg_r .reg_w .rou_txt{font-size:14px;color:#222222;line-height:32px;}
.reg_con .reg_r .reg_w .rou_txt span{font-size:14px;color:#e14831;}
.reg_con .rou_r{height:590px;}