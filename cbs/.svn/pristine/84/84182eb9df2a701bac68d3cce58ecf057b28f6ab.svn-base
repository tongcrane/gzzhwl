
.con_tent{border:none;width:1150px;}
.feedline{overflow:hidden;} /* 清浮动 */
.check{border:none;width:1150px;}
.layout{margin-right:50px;}
.right_no{margin-right:0;}
.layout .spa_n{padding-left:4px;width:230px;}
.layout .labe_l{display: inline-block;}
.mess_age .layout .inpu_t{margin-left:-4px;}
.layout .inpu_t{height:24px;}
.rela_tive{position:relative;}
.check .active{ background-color: #de642c;color:#fff;border: 1px solid #bc5120; border-radius: 2px;}
.check a{width:90px;}
.pull_out{position: absolute;bottom:60px;left:0;text-align: center;padding:0 24px;height: 28px;line-height: 28px;border: 1px solid #dcdcdc;border-radius: 2px;font-size: 14px;color: #4c4c4c;background: #eee;outline: none;}

/* 异常反馈样式 */
.feedback{margin-bottom: 60px;} 
.feedback h3 {width: 1123px;height: 48px;line-height: 48px;padding-left: 25px;margin-bottom: 24px;border-bottom: 1px solid #e1e1e1;background: url(../img/detail_info.png) no-repeat 0 center;font-size: 16px;color: #525252;}
.feedline .layout .labe_l{display: inline-block;width: auto;margin-right:5px;}
.feedline .layout .inpu_t{width:192px;height:24px;}
.feedline .layout{margin-right:30px;}
.feedline .right_short{margin-right:20px;}
.feedline .right_none{margin-right:0;cursor: pointer;}
.feedline .right_short .inpu_t{width:414px;}
.right_none{width:23px;height:24px;background:#eee;border:1px solid #d7d7d7;position:relative;}
.right_none:before{content: '';position:absolute;top:12px;left:6px;width:12px;border-top:2px solid #7b7b7b;}

/* 按钮部分样式 */
.btn a {float: right;width: 82px;text-align: center;height: 28px;line-height: 28px;border: 1px solid #dcdcdc;margin: 12px 32px 0 0;border-radius: 2px;font-size: 14px;color: #4c4c4c;background: #eee;}
.btn .add{position: relative;}
.btn .add:before{content: '';position:absolute;top:14px;left:34px;width:12px;border-top:2px solid #7b7b7b;}
.btn .add:after{content: '';position:absolute;top:9px;left:39px;height:13px;border-left:2px solid #7b7b7b;}
.btn .submit{margin:12px 0 0 0;}

/* 图片部分 */
.images{margin-left:964px;width: 178px;height: 178px;border: 1px solid #e5e5e5;border-radius: 4px;background: #fbfbfb;background-size: cover;background-position: center center;}

/* 单位样式 */
.km,.weight,.volume{position:relative;}
.km:after,.weight:after,.volume:after{content:"元/kg";position:absolute;top:2px;left:305px;color:#ddd;font-weight: normal;}
.km:after{content:"km";left:320px;}
.weight:after{content:"kg";left:325px;}
.volume:after{content:"m³";left:324px;}

/* 有单位input加padding-right */
.layout .unit_short{width:206px;padding-right:28px;}

/* 模态窗口 */
.model_content,.model_content_next{width:690px;height:366px;margin:-203px 0 0 -365px;padding:20px;}
.left.short,.right.short{width:340px;}
.model_content .layout .stage,.model_content .layout .labe_l,.model_content_next .layout .stage,.model_content_next .layout .labe_l{width:94px;}
.model_content .layout .spa_n,.model_content .layout .inpu_t,.model_content_next .layout .spa_n,.model_content_next .layout .inpu_t{width:244px;}
.model_content .layout_two .inpu_t{width:160px;}
.model_content .layout_two .mar_rig{margin-right:12px;}
.model_content h4,.model_content_next h4{font-size:20px;padding-bottom:15px;border-bottom:1px solid #dcdcdc;margin-bottom: 15px;color:#525252;}
.lab_line{position: relative;}
.lab_line:after{content:"" ;width:8px;height:3px;border-bottom:1px solid #dcdcdc;display: block;position: absolute;top:11px;left:260px;}
.model_content_next,.model_content_cansel{background: #fff;position: fixed;top:50%;left:50%;box-shadow: 0 1px 8px #ccc;display: none;}
.model_content textarea{display: block;width:372px;height:76px;border:1px solid #dedede;border-radius: 4px;margin:52px auto 0;text-indent: 6px;padding-top:4px;color:#525252;resize: none;outline:none;}
.model_content a,.model_content_next a,.model_content_cansel a{height:28px;line-height: 28px;background: #de642c;border: 1px solid #bc5120;padding:0 30px;border-radius: 2px;color:#fff;position:absolute;right:20px;bottom:32px;}
.model_content i,.model_content_next i,.model_content_cansel i{background:url("/img/adv_sea_close.png") no-repeat center;cursor: pointer;width: 20px;height: 20px;position: absolute;right: 5px;top: 5px;}

/* 订单取消弹框 */
.model_content_cansel{width:414px;height:200px;margin:-100px 0 0 -212px;}
a.mo_con_no{right:108px;}
a.mo_con_yes{right:214px;}
.model_content_cansel p{padding:40px;color:#525252;text-align: center;margin-top: 20px;}

/* 去掉详情页面行高 */
.layout .stage{line-height: normal;height:auto;}
.layout .spa_n{line-height: normal;height:auto;}
.layout{margin-bottom:15px;}

.tips{
	margin-top:40px;
}
.tips .text{
	color:red;
}
