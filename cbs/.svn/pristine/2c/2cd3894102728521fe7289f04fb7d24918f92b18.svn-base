.con_tent{border:none;width:1200px;padding:12px 0 0;}
.mess_age{width:1150px;margin:0 auto;}
h3>p{float:left;width:350px;font-size:14px;}
h3>p:nth-child(2){margin-left:12px;}
h3>p:nth-child(3){margin-left:58px;}
h3>p i{font-style: normal;font-size:16px;}
.order_num{font-size:16px;}

.layout_line .spa_n{width:1032px;height:26px;line-height: 26px;padding-top:0;}

.rela_tive{position:relative;}
.fee{position:absolute;top:-2px;right:84px;font-style: normal;font-size:14px;color:#525252;}

.check{width:1200px;border:none;}

/* 去掉详情页面行高 */
.layout .stage{line-height: normal;height:auto;}
.layout .spa_n{line-height: normal;height:auto;}
.layout{margin-bottom:15px;}

/* 异常部分样式 */
.unusual h3{width: 1123px;height: 48px;line-height: 48px;padding-left: 25px;margin-bottom: 24px;border-bottom: 1px solid #e1e1e1;background: url(../img/detail_info.png) no-repeat 0 center;font-size: 16px;color: #525252;}
.unusual{width:1150px;margin:0 auto;}
.un_content{margin-bottom: 30px;}
.un_content h4{font-size:14px;color:#414141;margin-bottom:20px;}
.un_bg{background: #f0f5ff;font-size: 14px;color:#414141;padding:15px 0;}
.un_bg>p{padding:5px 10px;}
.un_num{padding-right:4px;}
.un_time,.un_name,.un_cost,.un_reason{vertical-align: top;}
.un_time,.un_name,.un_cost{padding:0 10px;display: inline-block;}
.un_time{width:140px;}
.un_name{width:140px;}
.un_cost{width:80px;}
.un_reason{padding-left:10px;display:inline-block;width:650px;}
.unusual .images{width: 178px;height: 178px;border: 1px solid #e5e5e5;border-radius: 4px;background: #fbfbfb;background-size: cover;background-position: center center;}
.img_word{width:180px;display:block;height:30px;line-height: 30px;text-align: center;font-size:14px;color:#3b3b3b;font-weight: bold;}
.unusual .layout{margin-bottom:35px;}
.mar_bottom{margin-bottom: 20px;}

/* 在途跟踪样式 */
.main_box{width:1140px;padding-left:10px;padding-bottom:20px;font-size:15px;}
.box_line{color:#2f2f2f;padding:10px 0;border-left:1px solid #acacac;position:relative;}
.box_line>a{color:#2f2f2f;text-decoration: none;}
.box_line>a.active:hover{color:#e1642d;text-decoration: underline;}
.track_time,.track_people,.track_location,.track_content{display: inline-block;padding:0;margin:0;padding-right:6px;}
.track_time{margin-left:30px;width:146px;}
.track_location{width:180px;padding-right:0;font-size: 15px;vertical-align: top;}
.no_hand{cursor: default;}
.track_people{width:130px;}
.track_content{width:596px;padding-right:0;margin-left:30px;/* background:pink; */vertical-align: top;}
.ab_line{margin-bottom: 10px;}
.ab_line>span{display: inline-block;}
.ab_reason{color:#e1312d;max-width:330px;padding-right:10px;vertical-align: top;}
.ab_end{margin-left:15px;}
.ab_remark{width:507px;}
.pic>li{width:116px;height:65px;float:left;margin-right:4px;background:#eee;background-size: cover;background-position: center center;}
.pic>li:nth-last-of-type(1){margin-right:0;}
.pic{margin-top: 10px;}
.abnormal{position:relative;}
.abnormal .ab_a{width:80px;height:28px;line-height: 28px;position:absolute;top:20px;right:0;text-align: center;letter-spacing: 2px;background-color: #de642c;color:#fff;border:1px solid #bc5120;border-radius:2px;}
.circle{width:12px;height: 12px;border-radius: 50%;background:#bbb;position: absolute;left:-6px;margin-top:4px;z-index: 10;}
.box_line:nth-last-of-type(1){border-left:none;}
.box_line:nth-last-of-type(1):after{content: '';display:block;position: absolute;top:0;left:0;width:4px;height:20px;border-left:1px solid #acacac;}
.box_line:nth-of-type(1){color:#e1642d;}
.box_line:nth-of-type(1)>a{color:#e1642d;}
.box_line:nth-of-type(1):after{content: '';display:block;position: absolute;top:0;left:-2px;width:4px;height:20px;border-left:4px solid #fff; }
.box_line:nth-of-type(1) .circle{background:#e1642d;}