	//同意
	var doAgree=function(sourceId) {
		var result={};
    	result.sourceId = sourceId;
        var url = "/admin/orderReturn/agree";
        $.ajax({
            url: global.server + url,
            type: "POST",
            data: result,
            success: function (msg) {
                if (msg && msg.status && msg.status.statusCode == global.status.success) {
                	window.location.reload()
                } else {
                	alert(msg.status.errorMsg);
                }
            }
        });
	}
	
	var disAgree=function(sourceId) {
		var result={};
    	result.sourceId = sourceId;
        var url = "/admin/orderReturn/disagree";
        $.ajax({
            url: global.server + url,
            type: "POST",
            data: result,
            success: function (msg) {
                if (msg && msg.status && msg.status.statusCode == global.status.success) {
                	window.location.reload()
                } else {
                	alert(msg.status.errorMsg);
                }
            }
        });
	}
	
	var openSource = function(sourceId){
    	var url = '/checkSourceList.html?sourceId='+sourceId+'&action=return';
    	var body = document.getElementsByTagName("body")[0];
    	var el = document.createElement("a");
    	body.appendChild(el);
    	el.href = url;
    	el.target = '_blank';
    	el.click();
    	body.removeChild(el);
    }
	
