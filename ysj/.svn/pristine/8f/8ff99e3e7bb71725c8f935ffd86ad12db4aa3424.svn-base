/* 自定义下拉列表 */
.text{float:left;padding-right:12px;font-size:14px;}
.text.car_length{text-indent:1em;}
.select_w{width:77px;z-index:999;position:relative;}
.select_dropdown{background:url(../img/select_down.png) no-repeat center;display:block;width:14px;height:8px;float:left;padding-top:15px;}
.select_ol{top:29px; left:-72px;position:absolute;width:158px;border:1px solid #e8e8e8;border-radius:4px;background-color:#fff;border-bottom:none;height:240px;overflow-y:scroll;}
.ol_w.hide{display:none;}
.select_ol li{height:40px;line-height:40px;padding-left:19px;-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;border-bottom:1px solid #e8e8e8;}
.select_ol li.selected,.select_ol li:hover{cursor:pointer;background-color:#f6f6f6;}
.ol_w:before{content:"";display:block;width:0px;height:0px;border:9px solid #e8e8e8;position:absolute;top:15px;right:8px;border-top:transparent 9px solid;border-left:transparent 9px solid;border-right:transparent 9px solid;}
.ol_w:after{content:"";display:block;width:0px;height:0px;border:9px solid #fff;position:absolute;top:16px;right:8px;border-top:transparent 9px solid;border-left:transparent 9px solid;border-right:transparent 9px solid;}
