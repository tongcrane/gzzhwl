	     source_id,
	     price,
	     remark,
	     status,
	     created_by,
	     created_time,
	     updated_by,
	     updated_time,
	     is_deleted
	   from zh_quoted_info
	   <trim prefix="WHERE" prefixOverrides="AND |OR ">
	     <if test="quotedId != null">
	        quoted_id=#{quotedId}
	     </if>
	     <if test="accountId != null">
	        and account_id=#{accountId}
	     </if>
	     <if test="sourceId != null">
	        and source_id=#{sourceId}
	     </if>
	     <if test="price != null">
	        and price=#{price}
	     </if>
	     <if test="remark != null">
	        and remark=#{remark}
	     </if>
	     <if test="status != null">
	        and status=#{status}
	     </if>
	     <if test="createdBy != null">
	        and created_by=#{createdBy}
	     </if>
	     <if test="createdTime != null">
	        and created_time=#{createdTime}
	     </if>
	     <if test="updatedBy != null">
	        and updated_by=#{updatedBy}
	     </if>
	     <if test="updatedTime != null">
	        and updated_time=#{updatedTime}
	     </if>
	     <if test="isDeleted != null">
	        and is_deleted=#{isDeleted}
	     </if>
	    <if test="quotedStatusList != null">
	  		and status in 
		  <foreach collection="quotedStatusList" index="index" item="quotedStatus" open="(" separator="," close=")">  
		      #{quotedStatus}
		   </foreach>
	     </if>
	   </trim>
	</select>
	
	
	<select id="getQuotedList" parameterType="map" resultMap="pageResultMap">
	   select 
	     t1.quoted_id,
	     t1.account_id,
	     t1.source_id,
	     t1.price,
	     t1.remark,
	     t1.status,
	     t1.created_by,
	     t1.created_time,
	     t1.updated_by,
	     t1.updated_time,
	     t1.is_deleted
	   from zh_quoted_info t1,zh_order_source_info t2
	   where
	   t1.source_id = t2.source_id
	     <if test="accountId != null">
	        and t1.account_id=#{accountId}
	     </if>
	     <if test="sourceId != null">
	        and t1.source_id=#{sourceId}
	     </if>
	     <if test="price != null">
	        and t1.price=#{price}
	     </if>
	     <if test="remark != null">
	        and t1.remark=#{remark}
	     </if>
	     <if test="status != null">
	        and t1.status=#{status}
	     </if>
	     <if test="isDeleted != null">
	        and t1.is_deleted=#{isDeleted}
	     </if>
	     <if test="startTime != null">
	     <![CDATA[ and t2.start_time <= now() ]]>
	     </if>
	    <if test="quotedStatusList != null">
	  		and t1.status in 
		  <foreach collection="quotedStatusList" index="index" item="quotedStatus" open="(" separator="," close=")">  
		      #{quotedStatus}
		   </foreach>
	     </if>
	     order by t1.updated_time desc
	</select>
	
	
	<select id="getOrderCount" parameterType="map" resultType="java.lang.Integer">
	   select  count(1) as count
		FROM
		zh_quoted_info 
		where
		account_id = #{accountId}
		<if test="statusArray != null">
		 and status in
		  <foreach collection="statusArray" index="index" item="status" open="(" separator="," close=")">  
		        	#{status}
		   </foreach>
	    </if>
	</select>
	
</mapper> 