/* 公共部分 */
/* placeholder字体颜色 */
.container .inpu_t::-webkit-input-placeholder {color:#999;font-size: 14px;}
.container .inpu_t:-moz-placeholder {color:#999;font-size: 14px;}
.container .inpu_t::-moz-placeholder {color:#999;font-size: 14px;}
.container .inpu_t:-ms-input-placeholder {color:#999;font-size: 14px;}
.mar-top{margin-top:32px;}
.container .section{width:100%;background:#f8f8f8;border-top-left-radius:3px;border-top-right-radius:3px;padding-bottom:7px;margin-bottom:40px;}
.container h2.title{height:40px;line-height:40px;text-indent:53px;font-weight:normal;font-size:16px;margin-bottom:23px;border-top-left-radius:3px;border-top-right-radius:3px;background:#e2e2e2 url(../img/icon/info_icon.png) no-repeat 24px center;}
.container .layout,.container .layout>.labe_l,.container .layout>.inpu_t,.container .layout>.spa_n,.container .layout>.stage,.container .layout>.selec_t,.container .line>.labe_l,.container .line>textarea{float:left;font-size:14px;}
.container .line{margin-bottom: 16px;}
.container .section .layout{margin-left:48px;position:relative;}
.container .section .layout:nth-of-type(1){margin-left:11px;}

/* 新增页布局 */
.container .layout>.labe_l{width:109px;line-height:32px;text-indent: 14px;}
.container .layout>.labe_l.need{background: url(../img/icon/info_need_icon.png) no-repeat 2px center;}
.container .layout>.inpu_t{text-indent: 10px;}
/* input,select正常宽度 */
.container .layout>.inpu_t,.container .layout>.selec_t{width:234px;height: 30px;border:1px solid #d2d2d2;border-radius: 3px;}
.container .layout>.selec_t{width:236px;}
/* input+单选按钮时的宽 */
.container .layout>.inpu_t.short{width:98px;height:30px;}
.container .layout>.inpu_t.short.pright{width:78px;padding-right:20px;}

/* input+单位 宽 */
.container .layout>.inpu_t.p_right{padding-right:24px;width:210px;}
.container .layout>.inpu_t.pright{padding-right:34px;width:200px;}

.container .layout>.radio{float:left;width:136px;line-height: 32px;}
.container .layout>.radio>span{width:15px;height:15px;display:inline-block;background:url(../img/icon/radio.png) no-repeat center;vertical-align:-2px;margin:0 6px 0 16px;font-style: 14px;}
.container .layout>.radio>span.checked{background: url(../img/icon/radio_checked.png) no-repeat center;}

/* 联动菜单下拉框 宽 */
.container .layout>.selec_t.short{width:116px;margin-left:4px;}
.container .layout>.selec_t.short:nth-of-type(1){margin-left:0;}

/* 下拉框+单选按钮 宽 */
.container .layout>.selec_t.one{width:100px;}

/* 备注部分 */
.container .line>.labe_l{width:109px;line-height:32px;text-indent: 14px;margin-left:11px;}
.container .line>textarea{width:1020px;height:72px;border:1px solid #d2d2d2;border-radius: 3px;text-indent: 10px;resize:none;outline:none;}

.container .layout.long{width:738px;}
.container .layout.long>.address{width:344px;line-height: 32px;margin-left:48px;}
.container .layout.long>.inpu_t{margin-left:37px;}

/* 新增页按钮 */
.operation a{float:left;margin-left:30px;width:90px;height:30px;border:1px solid #d2d2d2;line-height: 30px;text-align: center;color:#666;font-size: 14px;border-radius: 3px;}
.operation .record>a{margin-left:0;}
.operation a:hover{border-color: #f65e36;color:#f65e36;}
.operation a:active{background: #f65e36;color:#fff;}

/* 定位图标 */
.layout .location{width:16px;height:30px;position: absolute;top:1px;right:8px;background: url(../img/icon/location.png) no-repeat center;cursor: pointer;}

/* 单位加在layout上 */
.km:after,.weight:after,.volume:after,.money:after,.m_short:after{position:absolute;top:6px;right:9px;color:#999;font-weight: normal;}
.km:after{content:"km";}
.weight:after{content:"kg";}
.volume:after{content:"m³";}
.money:after{content:"元";}
.m_short:after{content:"元";right:141px;} /* 纯运费单位 */



/* 详情页 */
.container .layout>.stage{width:109px;text-indent: 14px;}
.container .layout>.spa_n{width:236px;color:#666;}
.container .layout>.stage.high,.container .layout>.spa_n.high{line-height: 32px;}
.container .layout>.spa_n.gray{color:#999;}
.container .layout.long>.spa_n{width:628px;}
.container .info .line{margin-bottom: 30px;}